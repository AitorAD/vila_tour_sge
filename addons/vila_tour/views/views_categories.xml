<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_categories_form" model="ir.ui.view">
        <field name="name">vista.formulario.categorias</field>
        <field name="model">categories</field>
        <field name="arch" type="xml">
            <sheet>
                <form string="Formulario de categorías" class="oe_form_container"
                    style="margin: auto; max-width: 300px">
                    <group>
                        <field name="name" placeholder="Nombre de la categoría" required="1"
                            default_focus="1" />
                    </group>
                </form>
            </sheet>
        </field>
    </record>
</odoo>