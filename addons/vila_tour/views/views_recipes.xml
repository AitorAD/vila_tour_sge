<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_recipes_form" model="ir.ui.view">
        <field name="name">Vista formulario de recetas</field>
        <field name="model">recipes</field>
        <field name="arch" type="xml">
            <form string="Formulario de Recetas" class="oe_form_container" style="max-width: 850px; margin: auto;">
                <!-- Imagen de la receta con opciones de previsualización -->
                <field name="image" widget="image" class="oe_avatar"
                       options="{'preview_image': 'image_128', 'size': ['', 128]}"/>
                
                <!-- Etiqueta de "Aprobada" -->
                <widget name="web_ribbon" title="Aprobada" bg_color="bg-success" attrs="{'invisible': [('approved', '=', False)]}"/>

                <!-- Título y Puntuación de la receta -->
                <div class="oe_title">
                    <div class="o_row" style="display: flex; align-items: center;">
                        <h1 style="display: flex; align-items: center;">
                            <field name="name" placeholder="Nombre de la receta" required="1" default_focus="1" class="oe_inline"/>
                            
                            <!-- Texto "Puntuación" y campo de solo lectura -->
                            <div style="padding-left: 10px; padding-right: 15px;" class="oe_title">Puntuación:</div>
                            <field name="rating" readonly="1" class="oe_inline" style="padding-right: 15px;"/>
                            
                            <!-- Ícono de estado con tamaño y centrado ajustados -->
                            <span class="fa fa-circle" attrs="{'invisible': [('rating', '=', False), ('approved', '=', False)]}" style="font-size: 16px;"/>
                            
                            <div style="padding-left: 10px; padding-right: 10px;" class="oe_title">Aprobada</div>
                            <field name="approved" string="Aprobada"/>
                        </h1>
                    </div>
                </div>

                <!-- Sección de Descripción y Ingredientes -->
                <group string="Descripción" style="margin-top: -6px;">
                    <field name="description" placeholder="Descripción de la receta..."/>
                    <group>
                        <field name="ingredients" widget="many2many_tags"/>
                    </group>
                </group>
                
            </form>
        </field>
    </record>
</odoo>
